#include <stdio.h>

#define PHI 3.14

int main() {
    float diameter = 12.0;
    float radius = diameter / 2.0;

    float volume = (4.0 / 3.0) * PHI * (radius * radius * radius);
    
    float surfaceArea = 4 * PHI * (radius * radius);

    printf("Diameter bola: %.2f cm\n", diameter);
    printf("Jari-jari bola: %.2f cm\n", radius);
    printf("Volume bola: %.2f cm^3\n", volume);
    printf("Luas permukaan bola: %.2f cm^2\n", surfaceArea);

    return 0;
}
