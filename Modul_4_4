#include <stdio.h>

int main() {
    float tarif_pertama = 15000.0;

    float tarif_berikutnya = tarif_pertama * 0.5;

    int durasi = 3;

    float total_tarif = tarif_pertama; 
    if (durasi > 1) {
        total_tarif += (durasi - 1) * tarif_berikutnya;
    }

    printf("Total tarif: Rp %.2f\n", total_tarif);

    return 0;
}
