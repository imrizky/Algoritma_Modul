#include <stdio.h>

int main() {
    int Lesley = 57082;
    int Layla;
    int Balmond;

    Layla = Lesley;       
    Balmond = Layla + 1;  

    printf("Kasus A:\n");
    printf("Nilai Layla = %d\n", Layla);   
    printf("Nilai Balmond = %d\n", Balmond);
    
    int *Layla_ptr = &Lesley; 
    Balmond = *Layla_ptr + 1; 

    printf("\nKasus B:\n");
    printf("Nilai Layla (Pointer) = %p\n", Layla_ptr); 
    printf("Nilai Lesley (menggunakan pointer) = %d\n", *Layla_ptr); 
    printf("Nilai Balmond = %d\n", Balmond); 

    return 0;
}
